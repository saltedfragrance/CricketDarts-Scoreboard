@page "/tournament"
@inject IGameService gameService;

<PageTitle>Games overview</PageTitle>
<GamesOverview CurrentGames="CurrentGames"></GamesOverview>

@code{
    [Parameter]
    public List<Game> CurrentGames { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await RefreshGames();
    }

    private async Task RefreshGames()
    {
        CurrentGames = (await gameService.GetGames()).Where(g => g.IsActive).ToList();
    }
}
